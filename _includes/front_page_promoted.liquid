{% for man_prod in site.data.front_page.promoted %}
    {% assign manufacturer_id = man_prod[0] %}
    {% assign product_id = man_prod | join: '' %}
    {% assign product = site.data.manufacturers[manufacturer_id].products[product_id] %}

    {% capture target_url %}
        {% include
                proc/product_target_url.liquid
                manufacturer_id = manufacturer_id
                product_id = product_id
                product = product
        %}
    {% endcapture %}

    {% include
        tj_card_product.liquid
        product = product
        target_url = target_url
    %}
{% endfor %}